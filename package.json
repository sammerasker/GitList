{
  "name": "gitlists-edge-extension",
  "version": "1.0.1",
  "description": "GitLists - GitHub Stars and Lists Manager for Microsoft Edge",
  "scripts": {
    "build": "node build-unified.js --target=edge",
    "build:chrome": "node build-unified.js --target=chrome",
    "build:edge": "node build-unified.js --target=edge",
    "build:all": "node build-unified.js --target=all",
    "dev": "node build-unified.js --target=edge --dev",
    "dev:chrome": "node build-unified.js --target=chrome --dev",
    "dev:edge": "node build-unified.js --target=edge --dev",
    "watch": "node build-unified.js --target=edge --watch",
    "watch:chrome": "node build-unified.js --target=chrome --watch",
    "watch:edge": "node build-unified.js --target=edge --watch",
    "clean": "rmdir /s /q dist-chrome dist-edge 2>nul || rm -rf dist-chrome dist-edge",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "package": "npm run build:all && powershell Compress-Archive -Path dist-edge/* -DestinationPath gitlists-edge-extension.zip -Force && powershell Compress-Archive -Path dist-chrome/* -DestinationPath gitlists-chrome-extension.zip -Force"
  },
  "keywords": [
    "github",
    "stars",
    "bookmarks",
    "edge-extension",
    "microsoft-edge",
    "productivity"
  ],
  "author": "GitLists Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sammerasker/GitList.git"
  },
  "bugs": {
    "url": "https://github.com/sammerasker/GitList/issues"
  },
  "homepage": "https://github.com/sammerasker/GitList#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
