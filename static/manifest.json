{
  "manifest_version": 3,
  "name": "GitLink",
  "version": "1.0.0",
  "description": "Browse GitHub Stars and Star Lists with intelligent bookmarking",
  "author": "GitLink Team",
  "homepage_url": "https://github.com/sammerasker/GitList",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; object-src 'self'; base-uri 'self'; frame-ancestors 'none'; connect-src 'self' https://api.github.com https://github.com"
  },
  "background": {
    "service_worker": "background/serviceWorker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "GitLink - GitHub Stars Manager",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content/githubScraper.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
